<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.fragment.WordDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_hint_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:text="Enter The Word: "
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_hint_title"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Word"
            android:inputType="text"
            android:maxLength="12"
            android:padding="12dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textSize="14sp"></EditText>

        <TextView
            android:id="@+id/text_hint_mean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:text="Enter The Meaning: "
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/edit_text_title"></TextView>

        <EditText
            android:id="@+id/edit_text_mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Word Meaning"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minLines="1"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:layout_below="@id/text_hint_mean"/>

    </RelativeLayout>

</ScrollView>